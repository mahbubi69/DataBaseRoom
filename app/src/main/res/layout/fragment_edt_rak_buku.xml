<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.EdtRakBukuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <EditText
            android:id="@+id/edt_update_nama_rak_buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:hint="Nama Rak Buku" />

        <EditText
            android:id="@+id/edt_update_kata_kata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="kata kata" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_update_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tanggal"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:backgroundTint="#368B85"
            android:text="Simpan"
            android:textColor="@android:color/white" />

    </LinearLayout>


</FrameLayout>